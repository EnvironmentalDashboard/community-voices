{
    "root": {
        "notation": "/",
        "method": "get",
        "defaults": {}
    },

    "postLogin": {
        "notation": "/authenticate",
        "method": "post",
        "defaults": {
            "resource": "Identification",
            "action": "postCredentials"
        }
    },

    "getLogin": {
        "notation": "/login",
        "method": "get",
        "defaults": {
            "resource": "Identification",
            "action": "getLogin"
        }
    },

    "getLogout": {
        "notation": "/logout",
        "method": "get",
        "defaults": {
            "resource": "Identification",
            "action": "getLogout"
        }
    },

    "getProfile": {
        "notation": "/user/me",
        "method": "get",
        "defaults": {
            "resource": "User",
            "action": "getProfile"
        }
    },

    "getProtectedPage": {
        "notation": "/protected",
        "method": "get",
        "defaults": {
            "resource": "User",
            "action": "getProtectedPage"
        }
    },

    "getQuote": {
        "notation": "/quotes/{id}",
        "method": "get",
        "defaults": {
            "resource": "Quote",
            "action": "getQuote"
        },
        "requirements": {
            "id": "[0-9]"
        }
    },

    "getQuoteUpload": {
        "notation": "/quotes/new",
        "method": "get",
        "defaults": {
            "resource": "Quote",
            "action": "getQuoteUpload"
        }
    },

    "postQuoteUpload": {
        "notation": "/quotes/new/authenticate",
        "method": "post",
        "defaults": {
            "resource": "Quote",
            "action": "postQuoteUpload"
        }
    }
}
